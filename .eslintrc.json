{
  "extends": [
    "next",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "createDefaultProgram": true,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "root": true,
  "ignorePatterns": [
    "next.config.js",
    "postcss.config.js",
    "tailwind.config.js"
  ]
}
